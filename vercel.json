{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/react",
      "config": {
        "distDir": "build"  // This must match your 'build' folder
      }
    },
    {
      "src": "backend/api/**",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"  // Routes requests properly
    }
  ]
}

